<div class="book_contents_line">
  <ul class="item_lists">
    <% if @books.length > 0 %>
      <% @books.each_with_index do |book,i| %>
        <li class="item_list">
          <div class="book_content">
            <div class="book_image">
              <% if @book_image_url[i].present? %>
                <%= image_tag @book_image_url[i], class: "book_original_image"%>
              <% else %>
                <img src="/images/book_cover.png" alt="絵本の表紙" title="絵本の表紙">
                <div class="book_subject">
                  <%= book.book_subject %>
                </div>
              <% end %>
              <div class="book_destroy">
                <%= link_to '完全削除', book_path(book.id), method: :delete %>
                <%= link_to 'ゴミ箱に移動', trash_book_path(book.id), method: :post %>
              </div>
            </div>
            <div class="book_count_space">
              <div class="count_button_plus">
                <%= link_to image_tag("/images/plus.png", class: 'count_button', alt: "プラスボタン" )  , 
                  create_read_book_log_path(book.id), 
                  method: :POST 
                %>
              </div>
              <div class="book_count_result">
                <h1 class="count_result"><%= book.read_book_logs.count %></h1>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    <% else %>
      <div class="book_content_first_time">
        <div class="book_image">
          <img src="/images/book_cover.png" 
            alt="絵本の表紙" 
            title="絵本の表紙"
          >
          <div class="book_subject">
            <%= "1冊目の本を" %><br>
            <%= "登録しよう！" %>
          </div>
        </div>
        <div class="book_count_space">
          <div class="count_button_plus">
            <img src="/images/plus.png" 
              alt="プラスボタン" 
              title="プラスボタン" 
              class="count_button"
            >
          </div>
          <div class="book_count_result">
            <h1 class="count_result">0回</h1>
          </div>
        </div>
      </div>
    <% end %>
  </ul>
</div>