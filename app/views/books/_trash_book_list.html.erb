<div class="trash_book_contents_line">
  <ul class="item_lists">
    <% if @books.length > 0 %>
      <% @books.each do |book| %>
        <li class="item_list">
          <div class="book_content">
            <div class="book_image">
              <img src="/images/book_cover.png" alt="絵本の表紙" title="絵本の表紙">
              <div class="book_subject">
                <%= book.book_subject %>
              </div>
              <div class="book_destroy">
                <%= link_to '復活', trash_restore_path(book.id), method: :post %>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    <% else %>
      <div class="book_content_first_time">
        <div class="book_image">
          <img src="/images/book_cover.png" alt="絵本の表紙" title="絵本の表紙">
          <div class="book_subject">
            <%= "ゴミ箱の中に" %><br>
            <%= "本はありません" %>
          </div>
        </div>
      </div>
    <% end %>
  </ul>
</div>